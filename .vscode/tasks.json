{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Sample (Debug)",
            "type": "shell",
            "command": "gcc",   
            "args":     ["-g", "-Wall", "-v", "-I${workspaceFolder}/inc", "-o${workspaceFolder}/bin/sample", "samples/main.c"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}